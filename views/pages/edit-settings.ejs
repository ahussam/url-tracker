<div id="edit-settings" v-cloak>
  <div class="container">
    <br>
    <h1>Settings</h1>
    <hr/>
    <ajax-form action="updateSettings" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="telegram">Telegram API Token</label>
            <input class="form-control" id="telegramToken" name="telegramToken" type="text"  :class="[formErrors.telegramToken ? 'is-invalid' : '']" v-model.trim="formData.telegramToken" placeholder="Bot Token" autocomplete="" focus-first>
            <div class="invalid-feedback" v-if="formErrors.telegram">Please enter a valid Telegram bot token.</div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="telegram">Telegram Chat ID</label>
            <input class="form-control" id="telegramChatID" name="telegramChatID" type="text"  :class="[formErrors.telegramChatID ? 'is-invalid' : '']" v-model.trim="formData.telegramChatID" placeholder="Chat ID" autocomplete="" >
            <div class="invalid-feedback" v-if="formErrors.telegramChatID">Please enter a valid chat id.</div>
          </div>
        </div>

          <div class="col-sm-6">
            <label for="reportToTelegram">Enable Telegram reporting: </label>
            <input class="checkbox" id="reportToTelegram" name="reportToTelegram" type="checkbox"  :class="[formErrors.reportToTelegram ? 'is-invalid' : '']" v-model.trim="formData.reportToTelegram">
            </div>

      

      </div>
      <div class="row">
        <div class="col-sm-6">
          <p class="text-danger" v-if="cloudError">An error occured while processing your request. Please check your information and try again.</p>
        </div>

        
        <div class="col-sm-6">
          <div class="form-group text-right">
            <a class="btn btn-outline-info" href="/main">Cancel</a>
            <ajax-button type="submit" :syncing="syncing" class="btn btn-dark">Save changes</ajax-button>
          </div>
        </div>
      
        
      </div>
    </ajax-form>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
